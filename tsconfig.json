{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noImplicitAny": true,
    "allowJs": false,
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "skipLibCheck": true,
    "noEmit": true,
    "incremental": true
  },
  "include": [
    "./src/**/*",
    "./tests/unit/**/*"
  ],
  "exclude": [
    "./dist",
    "node_modules",
    "./config"
  ]
}
